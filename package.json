{
  "name": "pglite-utils",
  "private": true,
  "workspaces": [
    "packages/*",
    "sandbox",
    "examples/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "turbo run build",
    "test": "turbo run test",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo clean",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "lint:ws": "pnpm dlx sherif@latest",
    "format": "oxfmt --write .",
    "format:check": "oxfmt --check .",
    "typecheck": "turbo typecheck",
    "release": "bun run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "@types/node": "^22.13.14",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.24.0",
    "oxlint": "^1.39.0",
    "turbo": "^2.4.4",
    "typescript": "^5.8.2",
    "ultracite": "7.0.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bun run lint"
    ],
    "*": "bun run format --no-error-on-unmatched-pattern"
  },
  "engines": {
    "node": ">=20.12.0"
  },
  "packageManager": "bun@1.2.20",
  "trustedDependencies": [
    "@biomejs/biome"
  ]
}

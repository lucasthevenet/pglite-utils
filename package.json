{
  "name": "pglite-utils",
  "private": true,
  "workspaces": [
    "packages/*",
    "sandbox",
    "examples/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo clean",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "lint:ws": "pnpm dlx sherif@latest",
    "format": "oxfmt --write .",
    "format:check": "oxfmt --check .",
    "typecheck": "turbo typecheck",
    "release": "bun run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "@types/node": "^22.13.14",
    "oxfmt": "^0.21.0",
    "oxlint": "^1.36.0",
    "turbo": "^2.4.4",
    "typescript": "^5.8.2"
  },
  "engines": {
    "node": ">=20.12.0"
  },
  "packageManager": "bun@1.2.20",
  "trustedDependencies": [
    "@biomejs/biome"
  ]
}

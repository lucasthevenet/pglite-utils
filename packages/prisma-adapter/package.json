{
  "name": "pglite-prisma-adapter",
  "version": "0.4.1",
  "description": "Prisma's driver adapter for \"@electric-sql/pglite\"",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "exports": {
    "require": {
      "types": "./dist/index.d.cts",
      "default": "./dist/index.cjs"
    },
    "import": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "pkgroll",
    "clean": "rm -rf .turbo node_modules dist",
    "lint": "biome check ./src",
    "typecheck": "tsc --noEmit"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "pglite",
    "electric-sql",
    "serverless",
    "PostgreSQL",
    "edge",
    "Vercel",
    "Cloudflare",
    "Netlify",
    "Bun",
    "Deno",
    "database",
    "SQL",
    "Prisma"
  ],
  "author": "Lucas Thevenet <lcervantes@dc.uba.ar>",
  "license": "Apache-2.0",
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@prisma/driver-adapter-utils": "^6.5.0"
  },
  "devDependencies": {
    "@electric-sql/pglite": "^0.2.17",
    "@types/node": "^22.13.14",
    "pkgroll": "2.1.1",
    "typescript": "^5.8.2"
  },
  "peerDependencies": {
    "@electric-sql/pglite": ">= 0.2.0",
    "@prisma/client": ">= 6.5.0"
  }
}

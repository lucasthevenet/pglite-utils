{
  "name": "pglite-prisma-adapter",
  "version": "0.7.0",
  "description": "Prisma's driver adapter for \"@electric-sql/pglite\"",
  "keywords": [
    "Bun",
    "Cloudflare",
    "Deno",
    "Netlify",
    "PostgreSQL",
    "Prisma",
    "SQL",
    "Vercel",
    "database",
    "edge",
    "electric-sql",
    "pglite",
    "serverless"
  ],
  "license": "MIT",
  "author": "Lucas Thevenet <lcervantes@dc.uba.ar>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lucasthevenet/pglite-utils.git",
    "directory": "packages/prisma-adapter"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": false,
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "exports": {
    "require": {
      "types": "./dist/index.d.cts",
      "default": "./dist/index.cjs"
    },
    "import": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsdown --format esm --format cjs",
    "clean": "rm -rf .turbo node_modules dist",
    "lint": "oxlint",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@prisma/driver-adapter-utils": "7.1.0",
    "postgres-array": "^3.0.4"
  },
  "devDependencies": {
    "@electric-sql/pglite": "^0.2.17",
    "@types/node": "^22.13.14",
    "tsdown": "^0.18.4",
    "typescript": "^5.8.2"
  },
  "peerDependencies": {
    "@electric-sql/pglite": ">=0.2.0",
    "@prisma/client": ">= 7.1.0"
  }
}
